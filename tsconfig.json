{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist",       
    "noEmitOnError": true,       
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"],
}